<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/dashbord.css">
    <title>Members</title>
</head>

<body>

    <%- include('../partials/_adminNavbar.ejs') %>
        <div class="container">
            <div class="headers">
                <h1 class="titleDash"> Members list </h1>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4 cards">
                <% if (members.length> 0) { %>

                    <% members.forEach(member=> { %>
                        <div class="col">
                            <div class="card">
                                <div class="card-img-container">
                                    <img src="/pic/persons/<%= member.picture%>" class="card-img-top  img-size"
                                        alt="personal photo">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= member.first_name %>
                                            <%= member.last_name %>
                                    </h5>
                                    <p class="card-text">Membership : <span class="act">Active </span></p>
                                    <div class="card-link">
                                        <a href="/controlPanel/<%= member._id %>/edituser" class="link-warning"><i class="fas fa-edit"></i> Edit information</a>
                                      </div>
                                </div>
                            </div>

                        </div>

                        <% }) %>
                            <% } else { %>
                                <p>You have not created any member yet.</p>
                                <% } %>


            </div>
        </div>



</body>

<style>
    .act {
        color: green;
    }

    .card-img-container {
        
        width: 100%;
        height: 35vh;
        overflow: hidden;
    }

    .img-size {
        width: 100%;
        height: 50vh;

        object-fit: cover;
    }
    .cards{
        margin: 15px;
    }

    .card-link {
    text-decoration: none ;
   border-top: 2px solid #333;
    display: block;
    margin-top: 15px;
  }
  
  .card-link:hover {
    text-decoration:solid;
  }

  .adminav{
    height: 100% !important;
  }
</style>


</html>