<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/dashbord.css">
    <link rel="stylesheet" href="/stylesheets/trainer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Trainers</title>
</head>

<body>

    <%- include('../partials/_adminNavbar.ejs') %>
        <div class="container">
            <div class="headers">
                <h1 class="titleDash"> Fitness Trainers </h1>
            </div>
            <div class="addnewpackage">
                <a class="nav-link" href="/controlPanel/trainers/new"><i class="fas fa-plus"></i> Add New Trainer </a>
            </div>

            <div class="container mt-5">
                <div class="row row-cols-1 row-cols-md-3 g-4 cards">
                  <% if (trainers.length > 0) { %>
                    <% trainers.forEach(trainer => { %>
                      <div class="col">
                        <div class="card">
                          <div class="card-img-container  pic " >
                            <img src="<%= trainer.Picture %>" class="card-img-top img-size anythinggg " alt="trainer photo">
                          </div>
                          <div class="card-body">
                            <h5 class="card-title"> <%= trainer.name %></h5>
                            <p class="card-text">Specialization: <%= trainer.specialization %></p>
                            <p class="card-text">Salary: $<%= trainer.salary %></p>
                            <div class="card-link">
                              <a href="/controlPanel/<%= trainer._id %>/editTrainer" class="link-warning">
                                <i class="fas fa-edit"></i> Edit information
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <p>You have not created any trainers yet.</p>
                  <% } %>
                </div>
              </div>
            


        </div>



</body>




</html>