<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/dashbord.css">
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Admins</title>
</head>

<body>

    <%- include('../partials/_adminNavbar.ejs') %>
        <div class="container">
            <div class="headers">
                <h1 class="titleDash"> Admins list </h1>
            </div>

            <div class="addnewadmin">
              <a class="nav-link" href="/auth/sign-up/admin"><i class="fas fa-plus"></i> Add New Admin </a>
            </div>

         <div class="CardsContainer">
          <% if (admin.length > 0) { %>

            <% admin.forEach(admins => { %>
            <div class="card" style="width: 18rem;">
              
              <div class="card-body">
                <p class="card-text"> Name : <%= admins.first_name %>  <%= admins.last_name %></p>
                <p class="card-text">CPR : <%= admins.cpr %></p>
                <p class="card-text">Phone number : <%= admins.phoneNumber %></p>
                <p class="card-text">Email : <%= admins.email %></p>
                <div class="card-link">
                  <a href="#" class="link-warning"><i class="fas fa-edit"></i> Edit information</a>
                </div>
              </div>
            </div>
            <% }) %>
         <% } else { %>
              <p>You have not created any recipes yet.</p>
          <% } %>
        </div>
              
          </div>
        </div>

      

</body>




</html>